#:kivy 2.0.0

<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: 'User Login'
            TextInput:
                hint_text: 'Username'
            TextInput:
                hint_text: 'Password'
            Button:
                text: 'Login'
        GridLayout:
            cols: 2
            Button:
                text: 'Forgot Password?'
            Button:
                text: 'Sign Up'
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'Sign Up for a space journey'
        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            hint_text: 'Password'
        Button:
            text: 'Submit'
            on_press: root.add_user(username.text, password.text)




<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'sign_up_screen'